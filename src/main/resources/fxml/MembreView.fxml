<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.bibliotheque.controller.MembreController"
    spacing="15"
    alignment="CENTER"
    prefWidth="800">
    
    <Label text="Gestion des Membres"
        style="-fx-font-size: 18px; -fx-font-weight: bold;"
        styleClass="section-title" />
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Rechercher:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="txtRecherche" 
                  promptText="Nom, prénom ou email..." 
                  prefWidth="300"
                  onKeyReleased="#handleRecherche"/>
        <Button text="+ Nouveau Membre" onAction="#handleNouveauMembre"/>
    </HBox>
    
    <!-- Tableau des membres -->
    <TableView fx:id="tableMembres" prefHeight="400">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="80"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="170"/>
        </columns>
    </TableView>
    
    <!-- Statistiques -->
    <HBox spacing="20" alignment="CENTER">
        <Label fx:id="lblTotal" text="Total: 0 membres" style="-fx-font-weight: bold;"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="lblActifs" text="Actifs: 0"/>
        <Separator orientation="VERTICAL"/>
        <Label fx:id="lblInactifs" text="Inactifs: 0"/>
    </HBox>
    
</VBox>
