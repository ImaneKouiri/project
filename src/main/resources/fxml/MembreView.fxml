<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.bibliotheque.controller.MembreController"
            prefHeight="600.0" prefWidth="900.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #f5f5f5;">
            <Label text="Gestion des Membres" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Rechercher:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtRecherche" 
                          promptText="Nom, prénom ou email..." 
                          prefWidth="300" 
                          onKeyReleased="#handleRecherche"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="+ Nouveau Membre" 
                       onAction="#handleNouveauMembre" 
                       style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <VBox style="-fx-padding: 15;">
            <TableView fx:id="tableMembres" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="colPrenom" text="Prénom" prefWidth="150"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
                    <TableColumn fx:id="colStatut" text="Statut" prefWidth="80"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="230"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    
    <bottom>
        <HBox spacing="20" style="-fx-padding: 15; -fx-background-color: #e0e0e0;">
            <Label fx:id="lblTotal" text="Total: 0 membres" style="-fx-font-weight: bold;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lblActifs" text="Actifs: 0" style="-fx-text-fill: green;"/>
            <Separator orientation="VERTICAL"/>
            <Label fx:id="lblInactifs" text="Inactifs: 0" style="-fx-text-fill: red;"/>
        </HBox>
    </bottom>
    
</BorderPane>