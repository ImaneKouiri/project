<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.bibliotheque.controller.MainController"
            prefWidth="1000"
            prefHeight="650"
            stylesheets="@/css/main.css">

    <top>
        <HBox styleClass="header">
            <Label text="Système de Gestion de Bibliothèque"
                styleClass="header-title"/>
        </HBox>
    </top>

    <center>
        <StackPane styleClass="content-root">

            <VBox fx:id="menuPane" styleClass="card" spacing="25">
                <Label text="Menu principal" styleClass="section-title"/>

                <HBox spacing="20" alignment="CENTER">
                    <Button text="Livres" onAction="#showLivres" styleClass="menu-button"/>
                    <Button text="Membres" onAction="#showMembres" styleClass="menu-button"/>
                    <Button text="Emprunts" onAction="#showEmprunts" styleClass="menu-button"/>
                </HBox>
            </VBox>

            <VBox fx:id="membresPane" styleClass="card" spacing="20" visible="false">
                <Button text="← Retour" onAction="#backToMenu" styleClass="back-button"/>
            </VBox>

            <VBox fx:id="livresPane" styleClass="card" spacing="20" visible="false">
                <Button text="← Retour" onAction="#backToMenu" styleClass="back-button"/>
            </VBox>

            <VBox fx:id="empruntsPane" styleClass="card" spacing="20" visible="false">
                <Button text="← Retour" onAction="#backToMenu" styleClass="back-button"/>
            </VBox>

        </StackPane>
    </center>

</BorderPane>
