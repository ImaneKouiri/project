<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bibliotheque.controller.EmpruntController"
      spacing="15"
      alignment="CENTER"
      prefWidth="800">

    <Label text="Gestion des Emprunts"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- EMPRUNT -->
    <HBox spacing="10">
        <Label text="ISBN :" />
        <TextField fx:id="isbnField" />
    </HBox>

    <HBox spacing="10">
        <Label text="ID Membre :" />
        <TextField fx:id="membreIdField" />
    </HBox>

    <Button text="Emprunter"
            onAction="#handleEmprunter" />
    <TableView fx:id="empruntsTable">
        <columns>
            <TableColumn fx:id="colId" text="ID"/>
            <TableColumn fx:id="colIsbn" text="ISBN"/>
            <TableColumn fx:id="colMembreId" text="Membre"/>
            <TableColumn fx:id="colDateEmprunt" text="Date"/>
            <TableColumn fx:id="colDateRetourPrevue" text="Retour"/>
            <TableColumn fx:id="colRendu" text="Rendu"/>
            <TableColumn fx:id="colPenalite" text="Pénalité"/>
        </columns>
</TableView>


</VBox>
