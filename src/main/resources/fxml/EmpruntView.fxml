<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.bibliotheque.controller.EmpruntController"
      spacing="20"
      alignment="CENTER"
      prefWidth="800">

    <Label text="Gestion des Emprunts" styleClass="section-title"/>

    <HBox spacing="10">
        <Label text="Membre ID:"/>
        <TextField promptText="ID du membre"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Livre ISBN:"/>
        <TextField promptText="ISBN du livre"/>
    </HBox>

    <Button text="Enregistrer l'emprunt"/>

</VBox>