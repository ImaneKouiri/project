<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<VBox xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="com.bibliotheque.controller.EmpruntController"
    spacing="15"
    alignment="CENTER"
    prefWidth="800">

    <Label text="Gestion des Emprunts"
        style="-fx-font-size: 18px; -fx-font-weight: bold;"
        styleClass="section-title" />

    <Label text="Emprunter un livre" style="-fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Livre ISBN:"/>
        <TextField promptText="ISBN du livre"/>
    </HBox>

    <Button text="Enregistrer l'emprunt"/>

</VBox>